  class color32
  {
    public:
      unsigned int r, g, b, a;

      color32(double grayscale) 
             : color(grayscale, grayscale, grayscale, 1.0f) { }
      color32(double _r, double _g, double _b, double _a = 1.0f) {  }
  };



  \end{lstlisting}


